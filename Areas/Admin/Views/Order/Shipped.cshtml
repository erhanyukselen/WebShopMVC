@model IEnumerable<WebShopMVC.Models.OrderHeader>
@{
    ViewData["Title"] = "Shipped";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="btn-group d-grid gap-2 d-md-flex justify-content-md-end" role="group" aria-label="Basic outlined example">
    <a asp-action="Pending" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary">Pending Orders</a>
    <a asp-action="Completed" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary">Completed Orders</a>
    <a asp-action="Shipped" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary active">Shipped Orders</a>
    <a asp-action="Index" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary ">All Orders</a>

</div>
<br />
<div class="container">

    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    PhoneNumber
                </th>
                <th>
                    Order Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>

                    <td>
                        @item.OrderStatus
                    </td>
                    <td>
                        @if (User.IsInRole(Other.Role_Admin))
                        {
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil"></i> Edit</a>
                        }
                        else
                        {
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil"></i> Detail</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}


